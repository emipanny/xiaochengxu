page {
  background: #fff;
}
.edit {
  width: 100%;
}
.content {
  width: 90%;
  min-height: 30px;
  line-height: 30px;
  font-size: 16px;
  margin: 0 auto;
  border-bottom: 1px solid #ccc;
  padding: 10px 0;
}
.content .text{
  height: 30px;
  float: left;
  line-height: 30px;
}
.content input{
  width: 200px;
  float: left;
  height: 30px;
  text-align: center;
  overflow: auto;
  margin: 0;
  padding: 0;
}
.confirm {
  width:90%;
  height:30px;
  margin: 0 auto;
  margin-top: 30px; 
  line-height: 30px;
  font-size: 18px;
  font-weight: bold;
  padding: 10px 0;
}
.send {
  width:50%;
  height:30px;
  display: inline-block;
  text-align: center;
  color: #35b3ca;
}
.cancl {
  width:50%;
  height:30px;
  display: inline-block;
  text-align: center;
  color: #bbb;
}