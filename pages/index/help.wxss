
.msg {
  width: 100%;
  height: auto;
  background: #fff;
  font-size: 16px;
  margin: 0 auto;
  margin-top: 30px;
  padding: 30px;
  box-sizing: border-box;
}
.msg text {
  width: 100%;
  font-size: 16px;
  height:30px;
  line-height: 30px;
  display: block;
  text-align: center;
}
.midAct {
  margin-top:0px;
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 4rpx solid #35b3ca;  
    border-top: 1rpx solid #fff;  
    border-left: 1rpx solid #35b3ca;  
    box-sizing: border-box;
    text-align: center;  
    line-height: 40rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}  
.tab-lists {
  width:200%;
  height:40px;
}
.swiper-tab-list{  
    line-height: 40px;
    font-size: 25rpx;  
    display: inline-block;  
    width: 20%;  
    color: #35b3ca;
    background: #fff;
    border-right: 1rpx solid #35b3ca;
    box-sizing: border-box;
}  
swiper-item {
  width: 100%;
  padding: 20px;
  height: auto;
  border: 1px solid #ccc;
  overflow-y: auto;
  box-sizing: border-box;
  background: #fff;
}
.swiper-box {
  margin-top: 40px; 
}
.on{ 
    color: #fff;  
    background: #35b3ca;
}
.title {
  width: 100%;
  height: 40px;
  text-align: center;
  line-height: 40px;

}
swiper-item text {
  width: 100%;
  line-height: 30px;
  font-size: 14px;
  display: inline-block;  
  
}
swiper-item image {
  width: 100%;
  
}