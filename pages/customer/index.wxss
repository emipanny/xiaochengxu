/**index.wxss**/
page {
  background: #fff;
}
#user {
  width: 100%;
  height: 168rpx;
}
.title {
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding: 0 20px;
  font-size: 16px;
  box-sizing: border-box;
  background: #35b3ca;
  color: #fff;
}
.userinfo-avatar {
  float: left;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  float: left;
  line-height: 128rpx;
  margin: 20rpx;
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}
.pList {
  width: 100%;
  border-bottom: 1px solid #ccc;
  background: #fff;
  padding: 10px 0; 
}
.pLInfo {
  width: 90%;
  margin: 0 auto;
  font-size: 16px;
}
.pLAct {
  width: 90%;
  margin: 0 auto;
  font-size: 12px;
  height: 30px;
  line-height: 30px;
  text-align: center;
}
.pliTitle {
  width:100%;
  height: 30px;
  line-height: 30px;
}
.pliDate {
  width:100%;
  height: 30px;
  font-size: 12px;
  line-height: 30px;
}

.goto {
  float: left;
  width: 48%;
  height: 30px;
  background: #35b3ca;
  color: #fff;
}
.talk {
  float: right;
  width: 48%;
  height: 30px;
  background: #35b3ca;
  color: #fff;
  position: relative;
}
.sign {
   width: 20px;
   height: 20px;
   border-radius: 10px;
   background: red;
   line-height: 20px;
   font-size: 8px;
   text-align: center;
   color: #fff;
   position: absolute;
   right: 0px; 
   margin-top: -30px;
}