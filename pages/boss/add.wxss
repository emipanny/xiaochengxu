/* pages/boss/add.wxss */
@import "addHeader.wxss";
.msg {
  width: 100%;
  height: auto;
  background: #fff;
  font-size: 16px;
  margin: 0 auto;
  margin-top: 30px;
  padding: 30px;
  box-sizing: border-box;
}
.msg text {
  width: 100%;
  font-size: 16px;
}
.msg .light {
  color: #999
}
.msg input {
  width: 100%;
  height: 30px;
  border: 1px solid #eee;
  margin: 10px auto;
}
#address {
  width: 100%;
  height: 30px;
  border: 1px solid #eee;
  margin: 10px auto;
  display: block;

}
.msg picker {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border: 1px solid #eee;
  margin: 10px auto;
}
.getPosition {
  width: 100%;
  height: 30px;
  background: black;
}
.msg textarea {
  width: 100%;
  height: 100px;
  border: 1px solid #eee;
  margin: 10px auto;
}
.midAct {
  margin-top:50px;
}