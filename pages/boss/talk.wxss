/* pages/foreman/talk.wxss */
.talk {
  width: 95%;
  margin: 20rpx auto;
}
 .content {
  width: 100%;
  height: auto;
  padding: 20px 10px;
  border-bottom: 1px solid #ccc;
  background: #fff;
  box-sizing: border-box;
 }
 .who {
   width: 100%;
   height: 30px;
   font-size: 14px;
   line-height: 30px;
 }
 .text {
   width: 100%;
   height: auto;
   font-size: 16px;
   line-height: 20px;
 }
 .image {
   width:90%;
   height: auto;
 }
 .image image {
 }
 .act {
   width: 100%;
   min-height: 30px;
   padding: 10px;
   padding-bottom: 20px; 
   background: #fff;
   position: fixed;
   bottom: 0;
   z-index: 99;
   font-size: 12px;
   box-shadow: 0px 0px 10px 0px #ccc;
   box-sizing: border-box;
   line-height: 30px;
 }
 .act-image {
   float: left;
   width: 20%;
   height: 30px;
   text-align: center;
   background: #ccc;
   border-radius: 5px;
 }
 .act-text {
   float: left;
   width: 59%;
   height: 30px;
 }
 .act-text textarea {
   width: 90%;
   margin: 0 auto;
   min-height: 28px;
   height: auto;
   padding: 0;
   border: 1px solid #ccc;
 }
 .act-upload{
   float: left;
   width: 20%;
   height: 30px;
   text-align: center;
   background: rgba(53,179,202,1);
   border-radius: 5px;
   color: #fff;
 }