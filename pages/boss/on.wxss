
page {
  background: #fff;
  overflow: auto;
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 4rpx solid #35b3ca;  
    border-top: 1rpx solid #fff;  
    border-left: 1rpx solid #35b3ca;  
    box-sizing: border-box;
    text-align: center;  
    line-height: 40rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}  
.swiper-tab-list{  
    line-height: 40px;
    font-size: 25rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #35b3ca;
    background: #fff;
    border-right: 1rpx solid #35b3ca;
    box-sizing: border-box;
}  
.on{ 
    color: #fff;  
    background: #35b3ca;
}  
.pList {
  width: 100%;
  border-bottom: 1px solid #ccc;
  background: #fff;
  padding: 10px 0; 
}
.pLInfo {
  width: 90%;
  margin: 0 auto;
  font-size: 16px;
}
.pLAct {
  width: 90%;
  margin: 0 auto;
  font-size: 16px;
  display: none;
}
.pliTitle {
  width:100%;
  height: 30px;
  line-height: 30px;
}
.pliDate {
  width:100%;
  height: 30px;
  font-size: 12px;
  line-height: 30px;
}

swiper-item {
  height: auto;
  border: 1px solid #ccc;
  overflow-y: auto;
}
.swiper-box {
  padding-top:40px;
}
.goto {
  float: right;
}