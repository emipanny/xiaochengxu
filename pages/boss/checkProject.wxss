/* pages/boss/add.wxss */
.msg {
  width: 100%;
  height: auto;
  background: #fff;
  font-size: 16px;
  margin: 0 auto;
  margin-top: 30px;
  padding: 30px;
  box-sizing: border-box;
}
.msg text {
  width: 100%;
  font-size: 16px;
  height:30px;
  line-height: 30px;
  display: block;
  text-align: center;
}
.midAct {
  margin-top:0px;
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 4rpx solid #35b3ca;  
    border-top: 1rpx solid #fff;  
    border-left: 1rpx solid #35b3ca;  
    box-sizing: border-box;
    text-align: center;  
    line-height: 40rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}  
.swiper-tab-list{  
    line-height: 40px;
    font-size: 25rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #35b3ca;
    background: #fff;
    border-right: 1rpx solid #35b3ca;
    box-sizing: border-box;
}  
swiper-item {
  height: auto;
  border: 1px solid #ccc;
  overflow-y: auto;
}
.swiper-box {
}
.on{ 
    color: #fff;  
    background: #35b3ca;
}
.user {
  width: 95%;
  height: 30px;
  border: 1px solid #ccc;
  margin: 10px 0;
}
.user view {
  display: inline-block;
  margin-left: 5%;
  height: 30px;
  line-height: 30px;
  box-sizing: border-box;
}
.user .username {
  width: 45%;
}
.user .confirmN {
  width: 20%;
  color: #35b3ca;
}
.user .confirmY {
  width: 20%;
}
.user .del {
  width: 20%;
  color: #35b3ca;
}
.userType {
  margin-top: 20px;
}
