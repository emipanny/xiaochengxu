/* pages/foreman/report.wxss */
page {
  background: #fff;
}
.stage {
  width: 100%;
  padding-top: 20px;
}
.stageName {
  width: 100%;
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  background: #35b3ca;
  color: #fff;
  margin: 0 auto;
  padding: 0 10px;
  box-sizing: border-box;
}
.quota {
  width: 100%;
  height: auto;
}
.data-list {
  float: left;
  width: 100%;
  height: auto;
  padding: 10px;
  border-left: 1px solid #ccc;
  box-sizing: border-box;
}
.data-list .li {
  width: 100%;
  height: auto;
  line-height: 25px;
  padding: 5px 0;
  border-bottom: 1px #ccc dashed ;
}
.liA {
  width: 100%;
  line-height: 20px;
  font-size: 12px;
  color: #777;
}
.liB {
  width: 100%;
  line-height: 25px;
  font-size: 16px;
}
.liC {
  width: 100%;
  line-height: 25px;
  font-size: 14px;
  color: #666;
}
.clear {
  clear: both;
}