<!--pages/foreman/report.wxml-->
<view class="stage" wx:for="{{projects}}" wx:if="{{projects.length > 0}}" wx:for-item="list" wx:key="rg">
  <view class="stageName">{{list.title}}{{list.quota.length}}{{list.material.length}}</view>
  <view wx:if="{{list.quota.length > 0 || list.material.length > 0}}">
    <view class="data" wx:if="{{list.quota.length > 0}}">
      <view class="data-title">施工</view>
      <view class="data-list">
        <view class="li" wx:for="{{list.quota}}" wx:for-item="quota" wx:key="qg"  bindtap="checkQuota" data-id="{{quota.id}}">
          <view class="liA">
            <view class="liA_1">第{{quota.now}}天/共{{quota.all}}天</view>
            <view class="liA_2">{{quota.num}}{{quota.unit}}</view>
          </view>
          <view class="clear"></view>
          <view class="liB">{{quota.title}}</view>
          <view class="liC" wx:if="{{quota.supervisor_nowStart}}">监理交底：{{quota.supervisor_nowStart}}</view>
          <view class="liC" wx:if="{{quota.supervisor_nowEnd}}">监理验收：{{quota.supervisor_nowEnd}}</view>
          <view class="liC" wx:if="{{quota.designer_nowStart}}">设计交底：{{quota.designer_nowStart}}</view>
          <view class="liC" wx:if="{{quota.designer_nowEnd}}">设计验收：{{quota.designer_nowEnd}}</view>
        </view>
      </view>
      <view class="clear"></view>
    </view>
    <view class="data" wx:if="{{list.material.length > 0}}">
      <view class="data-title">材料</view>
      <view class="data-list">
        <view class="li" wx:for="{{list.material}}" wx:for-item="material" wx:key="mg" bindtap="checkMaterial" data-id="{{material.id}}">
          <view class="liA">
            <view class="liA_1">入场时间：{{material.into}}</view>
            <view class="liA_2">{{material.num}}{{material.unit}}</view>
          </view>
          <view class="clear"></view>
          <view class="liB">{{material.title}}{{material.users.length}}</view>
          <view class="liD" wx:if="{{material.users.length}}"  wx:for="{{material.users}}" wx:for-item="user" wx:key="ug" data-phone="{{user.phone}}" bindtap='call'>
            配送：{{user.nickname}}-{{user.realname}}-{{user.phone}}
          </view>
        </view>
      </view>
      <view class="clear"></view>
    </view>
  </view>
  <view wx:if="{{list.quota.length == 0 && list.material.length == 0}}">
    该项目今天暂无事宜
  </view>
</view>
<view wx:if="{{projects.length == 0}}" >
  今天暂无待办事宜
</view>


