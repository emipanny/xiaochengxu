<view class="edit" style="overflow-y:{{editShow ? 'auto' : 'hidden'}}; height:{{winHeight}}px">
  <view class="content">
    <view class="text">编号：</view>
    <text>{{info.goodsNo}}</text>
  </view>
  <view class="content">
    <view class="text">名称：</view>
    <text>{{info.title}}</text>
  </view>
  <view class="content">
    <view class="text">数量：</view>
    <text>{{info.num}}</text>
  </view>
  <view class="content">
    <view class="text">单位：</view>
    <text>{{info.unit}}</text>
  </view>
  <view class="content">
    <view class="text">入场时间：</view>
    <picker mode="date" value="{{info.date}}" class="value2" start="2015-09-01" end="2030-09-01"  bindchange="date"> 
        <view class="picker">
          {{info.date ? info.date : "选择日期"}} 
        </view>
    </picker>
    <picker mode="time" value="{{info.time}}" class="value3" start="00:00" end="23:59"   bindchange="time"> 
        {{info.time ? info.time : "选择时间"}} 
    </picker>
  </view>
  <view class="content">
    <view class="text">采购员：</view>
    <view class="value" bindtap="editUser">编辑采购员</view>
    <view class="clear"></view>
    <view class="classname"  wx:for="{{users}}"  wx:for-item="user" wx:key="users">
      <view class="classname"  wx:for="{{purchase}}"  wx:for-item="purchase" wx:key="purchases" wx:if="{{user.id == purchase}}">
        {{user.nickname}}-{{user.realname}}-{{user.phone}}
      </view>
    </view>
  </view>
  <view class="confirm">
    <view class="send" bindtap="send">修改</view>
    <view class="cancl" bindtap="back">取消</view>
  </view>
</view>
<view class="materialActList" style="display:{{userShow ? 'block' : 'none'}}; height:{{winHeight}}px">
  <checkbox-group bindchange="usercheckboxChange">
    <label class="checkbox" wx:for="{{users}}" wx:key="qg" wx:for-item="es">
      <checkbox value="{{es.id}}" name="material" checked="{{es.checked}}"/>{{es.nickname}}  {{es.realname}} {{es.phone}}
    </label>
  </checkbox-group>
  <view class="confirm">
    <view class="cancl" bindtap="editCancl">取消</view>
    <view class="send" bindtap="userSure" >确认</view>
  </view>
</view>
