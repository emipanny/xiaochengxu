
<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">基本信息</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">人员列表</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">打分详情</view>  
</view>  

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}px" bindchange="bindChange">  
    <swiper-item>  
      <view class="msg">
        <view class="midAct" bindtap="checkgoods">查看产品详情</view>
        <view class="midAct" bindtap="report" wx:if="{{info.state == 0 || info.state == 1}}">编辑项目流程</view>
        <view class="midAct" bindtap="check" wx:if="{{info.state == 2}}">查看项目流程</view>
        <view class="midAct" bindtap="checkREP">查看项目报表</view>
        <text>项目名称</text>
        <text>{{info.title}}</text>
        <text>开工时间</text>
        <text>{{info.startTime}}</text>
        <text>工期</text>
        <text>{{info.schedule}}</text>
        <text>金额</text>
        <text>{{info.amount}}元</text>
        <text>位置</text>
        <text>{{info.address}}</text>
        <view class="midAct" bindtap="checkmap">查看地图</view>
        <text>打卡范围</text>
        <text>{{info.distance}}米</text>
        <text>详细地址</text>
        <text>{{info.detailed_address}}</text>
        <text>备注</text>
        <text>{{info.content}}</text>
        <view class="midAct" bindtap="allot">分享给采购员</view>
      </view>
    </swiper-item>   
    <swiper-item>  
    </swiper-item>  
    <swiper-item>  
      <view wx:if="{{goods.length > 0}}">
        <view class="pList" wx:for="{{goods}}" id ="on_{{item.id}}" wx:key="on"  data-name="{{item.id}}" bindtap="showAct">
          <view class="pLInfo" id="pli_on_{{item.id}}">
            <view class="pliTitle">{{item.title}}</view>
            <view class="pliDate">
              开工日期：{{item.startTime}} 工期剩余：{{item.endTime}}天 
              <text  class="goto" >>></text>
            </view>
          </view>
        </view>
      </view>
    </swiper-item>  
</swiper>  
